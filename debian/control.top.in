Source: linuxcnc
Section: misc
Priority: optional
Maintainer: @MAINTAINER@
Build-Depends: debhelper (>= 6),
    @PYTHON_PACKAGING_DEPENDS@,
    @KERNEL_DEPENDS@,
    @KERNEL_HEADERS@,
    @MODUTILS_DEPENDS@,
    @EXTRA_BUILD@,
    tcl@TCLTK_VERSION@-dev,
    tk@TCLTK_VERSION@-dev,
    libtk-img,
    bwidget (>= 1.7),
    tclx,
    @LIBREADLINE_DEV@,
    @DOC_DEPENDS@,
    python3,
    python3-dev,
    python3-tk,
    python3-xlib,
    libxmu-dev,
    libglu1-mesa-dev,
    libgl1-mesa-dev | libgl1-mesa-swx11-dev,
    libgtk2.0-dev,
    libgtk-3-dev,
    gettext,
    intltool,
    autoconf,
    libboost-python-dev,
    netcat,
    libmodbus-dev (>= 3.0),
    libusb-1.0-0-dev,
    procps,
    psmisc,
    desktop-file-utils,
    yapps2,
    libepoxy-dev,
    po4a,
    libtirpc-dev
Standards-Version: @STANDARDS_VERSION@
Vcs-Browser: @VCS_BROWSER@
Vcs-Git: @VCS_GIT@

Package: @MAIN_PACKAGE_NAME@-dev
Architecture: any
Conflicts: linuxcnc-sim-dev, @OTHER_MAIN_PACKAGE_NAME@-dev @OTHER_CONFLICTING_PACKAGES@
Depends: g++, @KERNEL_HEADERS@,
    python3-serial,
    python (>= @PYTHON_VERSION@), python (<< @PYTHON_VERSION_NEXT@),
    ${python:Depends}, ${misc:Depends},
    @MAIN_PACKAGE_NAME@ (= ${binary:Version}),
    udev,
    @YAPPS_RUNTIME@
Section: libs
Description: @DEV_PACKAGE_DESCRIPTION_TEXT@
