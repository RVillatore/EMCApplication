Name: machinekit-hal
Description: Machinekit HAL
Requires:
Version: 0.4

# Paths
prefix=/usr
exec_prefix=/usr
includedir=${exec_prefix}/include/machinekit/hal
modulesdir=${exec_prefix}/lib/arm-linux-gnueabihf/machinekit/hal/module/managed
bindir=${exec_prefix}/bin

# CFLAGS
#Cflags: -I/usr/include/machinekit/hal -I/usr/include/machinekit/hal/hal -I/usr/include/machinekit/hal/hal_command -I/usr/include/machinekit/hal/hal_parport -I/usr/include/machinekit/hal/halscope_memory -I/usr/include/machinekit/hal/hostmot2 -I/usr/include/machinekit/hal/machinetalk -I/usr/include/machinekit/hal/misc_gtk -I/usr/include/machinekit/hal/mkini -I/usr/include/machinekit/hal/pru_app_loader -I/usr/include/machinekit/hal/pru_defines -I/usr/include/machinekit/hal/raspi_cpuinfo -I/usr/include/machinekit/hal/runtime -I/usr/include/machinekit/hal/samstr_memdefs -I/usr/include/machinekit/hal/syslog_async -I/usr/include/machinekit/hal/upci
Cflags: -I/usr/include/linuxcnc/  -I/usr/include/machinekit -I/usr/include/machinekit/hal -I/usr/include/machinekit/hal/hal -I/usr/include/machinekit/hal/hal_command -I/usr/include/machinekit/hal/runtime -I/usr/include/machinekit/hal/hostmot2
# Library flags
Libs: -L/usr/lib -L/usr/lib/arm-linux-gnueabihf
hal_lib_dir=
lib_ulapi=-lmkhunmanaged_runtime
lib_hal=-lmkhunmanaged_hal
lib_halcmd=-lmkhhal_command
lib_rtapi_math=-lmkhruntime_math

# Other build variables
modext=.so
realtime=${exec_prefix}/bin/realtime
